<% if (!result) { %>
<form method="post" action="/convert" class="main__form">
  <div class="container">
    <label for="value">Enter the weight to convert</label>
    <input type="number" id="value" name="value" step="any" required />
  </div>

  <div class="container">
    <label for="from-weight">Unit to convert from</label>
    <select name="fromWeight" id="from-weight">
      <option value="mg">Milligram (mg)</option>
      <option value="g" selected>Gram (g)</option>
      <option value="kg">Kilogram (kg)</option>
      <option value="t">Tonne (t)</option>
      <option value="oz">Ounce (oz)</option>
      <option value="lb">Pound (lb)</option>
    </select>
  </div>

  <div class="container">
    <label for="to-weight">Unit to convert to</label>
    <select name="toWeight" id="to-weight">
      <option value="mg">Milligram (mg)</option>
      <option value="g">Gram (g)</option>
      <option value="kg" selected>Kilogram (kg)</option>
      <option value="t">Tonne (t)</option>
      <option value="oz">Ounce (oz)</option>
      <option value="lb">Pound (lb)</option>
    </select>
  </div>

  <button type="submit">Convert</button>
</form>
<% } else { %>
<h1>Result of your calculation</h1>
<p><%- result %></p>
<form method="get" action="/weight">
  <button type="submit">Reset</button>
</form>
<% } %>
