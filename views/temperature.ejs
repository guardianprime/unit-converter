<% if (!result) { %>
<form method="post" action="/convert" class="main__form">
  <div class="container">
    <label for="value">Enter the temperature to convert</label>
    <input type="number" id="value" name="value" step="any" required />
  </div>

  <div class="container">
    <label for="from-temp">Unit to convert from</label>
    <select name="fromTemperature" id="from-temp">
      <option value="C" selected>Celsius (째C)</option>
      <option value="F">Fahrenheit (째F)</option>
      <option value="K">Kelvin (K)</option>
    </select>
  </div>

  <div class="container">
    <label for="to-temp">Unit to convert to</label>
    <select name="toTemperature" id="to-temp">
      <option value="C">Celsius (째C)</option>
      <option value="F" selected>Fahrenheit (째F)</option>
      <option value="K">Kelvin (K)</option>
    </select>
  </div>

  <button type="submit">Convert</button>
</form>
<% } else { %>
<h1>Result of your calculation</h1>
<p><%- result %></p>
<form method="get" action="/temperature">
  <button type="submit">Reset</button>
</form>
<% } %>
