<% if (!result) { %>
<form method="post" action="/convert" class="main__form">
  <div class="container">
    <label for="value">Enter the length to convert</label>
    <input type="number" id="value" name="value" step="any" required />
  </div>
  <div class="container">
    <label for="from-length">unit to convert from</label>
    <select name="fromLength" id="from-length">
      <option value="mm">Millimeter (mm)</option>
      <option value="cm">Centimeter (cm)</option>
      <option value="m" selected>Meter (m)</option>
      <option value="km">Kilometer (km)</option>
      <option value="μm">Micrometer (μm)</option>
      <option value="nm">Nanometer (nm)</option>
    </select>
  </div>
  <div class="container">
    <label for="to-length">unit to convert to</label>
    <select name="toLength" id="to-length">
      <option value="in">Inch (in)</option>
      <option value="ft" selected>Foot (ft)</option>
      <option value="yd">Yard (yd)</option>
      <option value="mi">Mile (mi)</option>
      <option value="nmi">Nautical mile (nmi)</option>
    </select>
  </div>
  <button type="submit">convert</button>
</form>
<% } else if (error) {%>
<p><%= error %></p>
<%}else { %>
<h1>result of your calculation</h1>
<p><%- result %></p>
<form method="get" action="/">
  <button type="submit">reset</button>
</form>
<%}%>
